@model TravelSite.ViewModels.ContactViewModel

@{
    ViewBag.Title = "Contact";
}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h2>Contact</h2>

        @section scripts{
            @Scripts.Render("~/bundles/jqueryval")
        }

        @if (ViewBag.Message != null)
        {
            <div>@ViewBag.Message</div>
        }


        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label for="Name">Name</label>

                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-muted" })
            </div>


            <div class="form-group">
                <label for="Email">Email</label>
                <div>
                    @Html.EditorFor(m => m.Email , new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-muted" })
                </div>
            </div>


            <div class="form-group">
                <label for="Message">Message</label>
            </div>
            <div>
                @Html.TextAreaFor(m => m.Message, new { cols = 40, rows = 4 , @class = "form-control"  })
                @Html.ValidationMessageFor(m => m.Message,null,new { @class = "text-muted" })
            </div>
            <br />
            <div>
                <input type="submit" value="Send Message" class="btn btn-success" />
            </div>
        }
    </div>

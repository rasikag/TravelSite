<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/font-awesome.css")
    @Styles.Render("~/Content/yeti.min.css")
    @Styles.Render("~/Content/MySite.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="sidebar">
        <img src="~/img/rasika.jpg" alt="userimage" class="userimage" />
        <span id="username">Rasika Gayan</span>
        <ul class="nav">
            <li class="active">@Html.ActionLink("Home", "Index", "App")</li>
            <li>@Html.ActionLink("About", "About", "App")</li>
            <li>@Html.ActionLink("Contact", "Contact", "App")</li>
        </ul>
    </div>

    <div id="wrapper">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <ul class="nav navbar-nav navbar-left">
                    <li>
                        <button id="sidebarToggle" class="btn btn-primary">
                            <i class="fa fa-angle-left"></i>
                        </button>
                    </li>
                </ul>
                @Html.ActionLink("The Traval Site", "Index", "App", null, new { @class = "navbar-brand" })
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="#" class="btn btn-sm btn-info">
                            <i class="fa fa-save"></i>Save
                        </a>
                    </li>
                    <li>
                        <a href="#" class="btn btn-sm btn-info">
                            <i class="fa fa-print"></i>Print
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <div id="main" class="container-fluid">
            <div>
                @RenderBody()
            </div>
        </div>
    </div>
    <hr />
    <div id="footer" class="container-fluid">
        <div class="navbar navbar-inverse navbar-fixed-bottom">
            <h4 class="text-center text-info">&copy; @DateTime.Now.Year - This is your traval site</h4>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/underscore")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/Site_Scripts/site.js")
    @RenderSection("scripts", required: false)
</body>
</html>
